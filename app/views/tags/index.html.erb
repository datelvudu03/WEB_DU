<h1>Tags#index</h1>

<%= link_to 'Add new', new_tag_path %>
<%= link_to 'To Tasks', tasks_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Color</th>
    <th></th>
  </tr>

  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.title %></td>
      <td><%= tag.color %>
      <td><%= link_to 'EDIT',edit_tag_path(tag) %></td>
      <td><%= link_to 'Smazat', tag_path(tag),
                      method: :delete,
                      data: {confirm: 'Opravdu chcete smazat?'} %></td>
    </tr>
  <% end %>
</table>